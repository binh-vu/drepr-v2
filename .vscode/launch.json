    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "examples/pseudo_people/s01.default.csv"
            ]
        },
        {
            "name": "Debug D-REPR",
            "type": "debugpy",
            "request": "launch",
            "module": "drepr",
            "args": [
                "examples/mineral_site/missing_values/model.yml",
                "default=examples/mineral_site/missing_values/default.json",
                "--progfile",
                "examples/mineral_site/missing_values/program/write_to_str.py"
            ]
        },
        {
            "name": "pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "-sxvvv",
                "tests",
                "-k",
                "test_program_generation"
            ]
        }
    ]
}